[Unit]
Description=System monitoring and health MCP
After=network.target

[Service]
Type=simple
User=matt-woodworth
WorkingDirectory=/home/matt-woodworth/dev/myroofgenius-backend/mcp-servers/monitoring-mcp
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/bin/python3 /home/matt-woodworth/dev/myroofgenius-backend/mcp-servers/monitoring-mcp/server.py
Restart=always
RestartSec=10

[Install]
