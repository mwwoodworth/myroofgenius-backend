{
  "vercel_project": "myroofgenius-live",
  "log_drain": {
    "type": "syslog",
    "url": "syslog://logs.papertrailapp.com:34302",
    "environments": [
      "production",
      "preview"
    ],
    "format": "json"
  },
  "papertrail": {
    "system_name": "MyRoofGenius-Vercel",
    "filters": [
      "error OR failed OR exception",
      "slow OR timeout OR performance",
      "auth OR unauthorized OR forbidden"
    ],
    "alerts": [
      {
        "name": "5xx Errors",
        "query": "status:5*"
      },
      {
        "name": "Build Failures",
        "query": "build failed"
      },
      {
        "name": "Timeouts",
        "query": "timeout OR 'timed out'"
      }
    ]
  }
}